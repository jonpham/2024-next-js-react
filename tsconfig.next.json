{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        /* Bundler mode */
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "vitest.setup.mts",
        "vitest.setup.ts",
        /* Test / Mock files */
        ".storybook/**/*",
        "src/**/__tests__/*.{test,spec}.{ts,tsx}"
    ]
}